@{
    ViewData["Title"] = "Login Page";
}

<head>
    <style>
        input {
            color: black;
            background-color: white;
            border: 2px solid rgb(188, 190, 192);
            border-radius: 7px;
            padding: 3px;
            width: 250px;
        }

        .account {
            color: black;
            background-color: darkgray;
            border: 2px solid rgb(131, 131, 131);
            border-radius: 7px;
            padding-left: 10px;
            padding-right: 10px;
            padding-top: 3px;
            padding-bottom: 3px;
        }
    </style>
</head>
<body>
    <div style="width: 100%;" align="center">
        <h3>@ViewData["Message"]</h3>
        <h4>Cash Machine Web System</h4>
        <br>
        <form action="" method="post">
            <label>Login</label><br>
            <input type="text" id="LoginUser" name="loginUser" placeholder="Insert your Email or User Name" /><br><br>
            <label>Password</label><br>
            <input type="password" id="PasswordUser" name="passwordUser" placeholder="Insert your password" />

            <p style="color:red;">@ViewData["LoginError"]</p>
            <input class="account" id="btnLogin" type="submit" value="Login">
        </form>
        <br>
        <br><br>
        <p>
            Don't have an account? <a href="/Home/RegisterUser">Sign up</a>
        </p>

    </div>
</body>