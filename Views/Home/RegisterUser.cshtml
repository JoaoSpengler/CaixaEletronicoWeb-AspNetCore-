@{
    ViewData["Title"] = "Register Page";
}

<head>
    <style>
        input {
            color: black;
            background-color: white;
            border: 2px solid rgb(188, 190, 192);
            border-radius: 7px;
            padding: 3px;
            width: 250px;
        }

        .account {
            color: black;
            background-color: darkgray;
            border: 2px solid rgb(131, 131, 131);
            border-radius: 7px;
            padding-left: 13px;
            padding-right: 13px;
            padding-top: 3px;
            padding-bottom: 3px;
        }
    </style>
</head>
<body>
    <div style="width: 100%;" align="center">
        <h3>@ViewData["Message"]</h3>
        <h4>Cash Machine Web System</h4>
        <br>
        <form action="RegisterUser" method="post">
            <label>Email</label><br>
            <input type="text" id="LoginId" name="loginId" placeholder="Insert a valid email" /><br><br>
            <label>User Name</label><br>
            <input type="text" id="UserNameId" name="userNameId" placeholder="Insert your name" /><br><br>
            <label>Password</label><br>
            <input type="password" id="PasswordId" name="passwordId" placeholder="Insert a password" /><br><br>
            <input type="password" id="PasswordConfirm" name="passwordConfirm" placeholder="Confirm your password">


            <p style="color:red;">@ViewData["Error"]</p>
            <input class="account" id="btnSub" type="submit" value="Register">
        </form>
        <br>
        <br><br>
        <p>
            Have an account? <a href="/">Sign in</a>
        </p>
    </div>
</body>